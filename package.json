    "devDependencies": {
        "@cloudflare/workers-types": "^4.20251004.0",
        "@libsql/client": "^0.15.15",
        "@types/node": "^24.7.0",
        "drizzle-kit": "^0.31.5",
        "tsx": "^4.20.6",
        "wrangler": "^4.4.0"
    }
